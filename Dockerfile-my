FROM amazoncorretto:17-alpine as corretto-jdk
WORKDIR application
COPY target/alist-tvbox-1.0.jar app.jar
RUN java -Djarmode=layertools -jar app.jar extract

FROM haroldli/xiaoya-tvbox:latest

VOLUME /opt/atv/data/
WORKDIR /opt/atv/

COPY --from=corretto-jdk application/dependencies/ ./
COPY --from=corretto-jdk application/snapshot-dependencies/ ./
COPY --from=corretto-jdk application/spring-boot-loader/ ./
COPY --from=corretto-jdk application/application/ ./
COPY entrypoint.sh /


EXPOSE 4567 80

ENTRYPOINT ["/entrypoint.sh"]

CMD ["81", "--spring.profiles.active=production,xiaoya"]

